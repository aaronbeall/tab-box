{
  "manifest_version": 3,
  "name": "Tab Box",
  "version": "0.1.0",
  "description": "Persist and manage tab groups via bookmarks, with a side panel tree.",
  "permissions": [
    "bookmarks",
    "tabs",
    "tabGroups",
    "storage",
    "windows",
    "sidePanel",
    "favicon"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "web/dist/background.js"
  },
  "action": {
    "default_title": "Tab Box",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    }
  },
  "side_panel": {
    "default_path": "web/dist/index.html"
  }
}