{
  "manifest_version": 3,
  "name": "Tab Box",
  "version": "1.1.0",
  "description": "Persist and manage tab groups with a searchable vertical side panel, per group tab history, and session restore.",
  "permissions": [
    "tabs",
    "tabGroups",
    "storage",
    "windows",
    "sidePanel",
    "favicon",
    "contextMenus"
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "web/dist/background.js"
  },
  "action": {
    "default_title": "Tab Box",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    }
  },
  "side_panel": {
    "default_path": "web/dist/index.html"
  }
}